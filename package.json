{
  "type": "module",
  "name": "vs-mcp",
  "displayName": "AI Extension",
  "description": "A minimal VSCode extension built with Vite and Vitest",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-standards/vs-mcp.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vs-mcp.helloWorld",
    "onCommand:vs-mcp.createIdeContext",
    "onCommand:vs-mcp.setApiKey",
    "onView:vsMcpListView",
    "onView:vsMcpGenerateView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "MCP Settings",
      "properties": {
        "vs-mcp.apiUrl": {
          "type": "string",
          "default": "",
          "description": "The AI API URL. Leave blank for default OpenAI endpoint."
        }
      }
    },
    "commands": [
      {
        "command": "vs-mcp.runAgent",
        "title": "Run VS-MCP Agent",
        "icon": "$(play-circle)"
      },
      {
        "command": "vs-mcp.createAgent",
        "title": "Create VS-MCP Agent",
        "icon": "$(edit)"
      },
      {
        "command": "vs-mcp.openMcpSettings",
        "title": "Open VS-MCP Settings",
        "icon": "$(gear)"
      },
      {
        "command": "vs-mcp.setApiKey",
        "title": "Set VS-MCP API Key",
        "icon": "$(key)"
      },
      {
        "command": "vs-mcp.createIdeContext",
        "title": "Create VS-MCP IDE Context"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vsMcpViewContainer",
          "title": "VS-MCP",
          "icon": "media/mcpx-icon.svg"
        }
      ]
    },
    "views": {
      "vsMcpViewContainer": [
        {
          "id": "vsMcpListView",
          "name": "Agents",
          "icon": "media/mcpx-icon.svg",
          "type": "webview"
        },
        {
          "id": "vsMcpGenerateView",
          "name": "Generate",
          "icon": "media/mcpx-icon.svg",
          "type": "webview"
        },
        {
          "id": "vsMcpIntegrate",
          "name": "Integrate",
          "icon": "media/mcpx-icon.svg",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vs-mcp.setApiKey",
          "when": "view == vsMcpGenerateView",
          "group": "navigation@4"
        },
        {
          "command": "vs-mcp.openMcpSettings",
          "when": "view == vsMcpGenerateView",
          "group": "navigation@3"
        }
      ],
      "explorer/context": [
        {
          "command": "vs-mcp.runAgent",
          "group": "mcp-agents@1"
        },
        {
          "command": "vs-mcp.createAgent",
          "group": "mcp-agents@2"
        }
      ],
      "editor/title": [
        {
          "command": "vs-mcp.runAgent",
          "when": "resourceFilename =~ /\\.agent\\.js$/",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "vite build",
    "dev:webview": "vite build --watch --config vite.config.webview.ts",
    "build:webview": "vite build --config vite.config.webview.ts",
    "build:mcp": "tsx scripts/build-mcp.ts",
    "build:server": "tsx scripts/build-mcp-server.ts",
    "build:docs": "tsx scripts/generate-docs.ts",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "package": "bash scripts/package-extension.sh",
    "publish": "vsce publish",
    "build:version": "bash scripts/build-version.sh"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react-dom": "^19.1.9",
    "@vitest/ui": "^1.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "vsce": "^2.15.0",
    "@types/vscode": "^1.94.0"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.0.2",
    "dotenv": "^17.2.2",
    "fast-glob": "^3.3.3",
    "nanoid": "^5.1.5",
    "openai": "^5.20.2",
    "ora": "^8.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "ts-morph": "^27.0.0",
    "zod": "^3.25.76"
  }
}
